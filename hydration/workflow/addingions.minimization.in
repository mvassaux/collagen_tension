variable        outfreq index 1000
variable        outputname index addingions.minimization 

units           real
boundary        p p p

newton          off
pair_style      lj/charmmfsw/coul/long 10 12
pair_modify     mix arithmetic

atom_style      full
bond_style      harmonic
angle_style     charmm
dihedral_style  charmmfsw
special_bonds   charmm
improper_style  harmonic

fix             cmap all cmap ./charmmff.cmap
fix_modify      cmap energy yes
read_data       ./microfibril.data fix cmap crossterm CMAP

kspace_style    pppm 1e-5

neighbor        2 bin
neigh_modify    delay 5 every 1

create_atoms    36 random 32 ${seed} NULL overlap 5
set             type 36 charge -1.0

minimize        1.0e-5 1.0e-7 1000 10000

write_data      ${outputname}.data
